{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "sourceMap": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**/*.ts"
    ]
}